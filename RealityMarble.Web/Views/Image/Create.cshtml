@model RealityMarble.Web.Models.CreateImageModel

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Upload new image</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-14">
                <h4>Description: </h4>
                @Html.EditorFor(model => model.About, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.About, "", new { @class = "text-danger" })
            </div>
            <hr />           
        </div>
        <div class="col-lg--4" align="justify">
            <h4>@ViewData["ErrorMessage"]</h4>
            <input type="file" name="imageFile" id="imageFile" accept="image/*" />
        </div>
         <div class="col-md-14">
             <hr />
                <input type="submit" value="Upload" class="btn btn-default" />
        </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
